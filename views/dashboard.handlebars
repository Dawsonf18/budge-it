{{#with budget}}
<h1>{{username}}'s Dashboard</h1>

<div class="d-flex justify-content-around">
    <button id="addIncome" class="btn btn-success fs-1" data-bs-toggle="modal" data-bs-target="#incomeForm">Add An Income</button>
    <button id="addExpense" class="btn btn-danger fs-1" data-bs-toggle="modal" data-bs-target="#expenseForm">Add An Expense</button>
</div>

<div class="d-flex justify-content-around">
    <button id="manageIncome" class="btn btn-success fs-1" data-bs-toggle="modal" data-bs-target="#manageIncomeForm">Manage Incomes</button>
    <button id="manageExpense" class="btn btn-danger fs-1" data-bs-toggle="modal" data-bs-target="#manageExpenseForm">Manage Expenses</button>
</div>

<h2 class="border-bottom">Annual Totals</h2>

<div class="d-flex justify-content-around">
    <h3 id="incomeTotal"></h3>
    <p class="fs-2" id="budgetStatus"></p>
    <h3 id="expenseTotal"></h3>
</div>

{{> addIncome}}
{{> addExpense}}
{{> manageIncome}}
{{> manageExpense}}

<div class="d-none" id="userID">{{id}}</div>

<h2 class="border-bottom">Incomes</h2>
<table id="incomeTable" class="table table-striped table-hover table-success">
    <thead>
        <tr>
            <th scope="col">Type</th>
            <th scope="col">Amount</th>
            <th scope="col">Frequency</th>
        </tr>
    </thead>
    <tbody>
        {{#each incomes}}
        <tr>
            <th scope="col">{{income_type}}</th>
            <th scope="col">{{income_amount}}</th>
            <th scope="col">{{income_frequency}}</th>
        </tr>
        {{/each}}
    </tbody>
</table>

<h2 class="border-bottom">Expenses</h2>
<table id="expenseTable" class="table table-striped table-hover table-danger">
    <thead>
        <tr>
            <th scope="col">Expense</th>
            <th scope="col">Amount</th>
            <th scope="col">Type</th>
            <th scope="col">Frequency</th>
        </tr>
    </thead>
    <tbody>
        {{#each expenses}}
        <tr>
            <th scope="col">{{expense_name}}</th>
            <th scope="col">{{expense_amount}}</th>
            <th scope="col">{{expense_type}}</th>
            <th scope="col">{{expense_frequency}}</th>
        </tr>
        {{/each}}
    </tbody>
</table>
{{/with}}
<script src="/javascript/manage-expense.js"></script>
<script src="/javascript/manage-income.js"></script>
<script src="/javascript/totals.js"></script>

