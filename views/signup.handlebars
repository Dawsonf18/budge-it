<div class="col-6 justify-content-center">
  <h2 class="fs-1 mb-3">Sign Up</h2>
  <form class="signup-form p-2 ">
    <div class="mb-3">
      <label for="email-signup" class="form-label">Email address</label>
      <input type="email" class="form-control" id="email-signup" aria-describedby="emailHelp">
    </div>
    <div class="mb-3">
      <label for="username-signup" class="form-label">Username</label>
      <input type="text" class="form-control" id="username-signup">
    </div>
    <div class="mb-3">
      <label for="password-signup" class="form-label">Password (8+ Characters)</label>
      <input type="password" class="form-control" id="password-signup">
    </div>
    <button type="submit" class="btn btn-success">Submit</button>
  </form>
</div>
<script src="/javascript/signup.js"></script>
