<body class="text-center bg-secondary d-flex flex-column container-fluid min-vh-100">


  <header class="row bg-success">
    <h1 class=""><a class="text-light text-decoration-none" href="/">Budge-It</a></h1>

    <ul class="nav nav-pills nav-fill">
      <li class="nav-item">
        <a class="text-light nav-link" href="/">Home</a>
      </li>      
      <!-- Conditionally render login link with UNLESS-->
      {{#if loggedIn}}
      <li class="nav-item">
        <a class="text-light nav-link" href="/dashboard">Dashboard</a>
      </li>
      <li class="nav-item">
        <a class="text-light nav-link" href="#" id="logout">Logout</a>
      </li>
      {{else}}
      <li class="nav-item">
        <a class="text-light nav-link" href="/login">Login</a>
      </li>
      {{/if}}
  </ul>
  </header>

  <main class="row min-vh-100 min-vw-100 align-items-center text-light">
    {{{body}}}
  </main>

  <footer class="row text-center mt-auto bg-success text-light">
    &copy; Budge-It 2022
  </footer>
</body>

</html>
